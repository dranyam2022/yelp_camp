<% layout('layouts/boilerplate') %>

<form action="/login" method="POST" class="validated-form" novalidate>
  <h2>Login</h2>
  <div class="mb-3">
    <label class="form-label" for="username">Username</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
  </div>
  <div class="mb-3">
    <label class="form-label" for="location">Password</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
  </div>
  <button class="btn btn-success">Login</button>
</form>
